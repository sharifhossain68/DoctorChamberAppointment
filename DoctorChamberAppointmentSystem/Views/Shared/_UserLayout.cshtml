<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/AngularJsController/MyApp.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body ng-app="MyApp">


    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"><img src="~/Image/logo.png" style="width:50%;" /></a>


        <div class=" navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">

                </li>
                <li class="nav-item">

                </li>
                <li class="nav-item">

                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">


                <a href="/User/Index" class="btn btn-outline-success my-2 my-sm-0">Admin/Doctor Login</a>
                <br /><br />
            </form>
            <form class="form-inline my-2 my-lg-0">


                <a href="/User/Registration" class="btn btn-outline-success my-2 my-sm-0"><span class="glyphicon glyphicon-user"></span>Doctor Signup</a>
            </form>
        </div>
    </nav>

    <div class="col-sm-3 col-md-3">
        @if (ViewBag.RoleName == "Admin")
        {

            @Html.Partial("AdminPartial")

        }
        else if (ViewBag.RoleName == "Doctor")
        {

            @Html.Partial("DoctorPartial")

        }
    </div>
    <div class="col-md-9">

        @RenderBody()

    </div>







</body>
</html>